# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# swap window
ctrl + alt - left  : yabai -m window --swap west
ctrl + alt - down  : yabai -m window --swap south
ctrl + alt - up    : yabai -m window --swap north
ctrl + alt - right : yabai -m window --swap east

# move window
ctrl + alt + cmd - left  : yabai -m window --warp west
ctrl + alt + cmd - down  : yabai -m window --warp south
ctrl + alt + cmd - up    : yabai -m window --warp north
ctrl + alt + cmd - right : yabai -m window --warp east

# send window to desktop
ctrl + alt + cmd + shift - left  : yabai -m window --space prev
ctrl + alt + cmd + shift - right : yabai -m window --space next
ctrl + alt + cmd + shift - 1     : yabai -m window --space 1
ctrl + alt + cmd + shift - 2     : yabai -m window --space 2
ctrl + alt + cmd + shift - 3     : yabai -m window --space 3
ctrl + alt + cmd + shift - 4     : yabai -m window --space 4

# increase region size
shift + alt - a : yabai -m window --resize left:-50:0
shift + alt - s : yabai -m window --resize bottom:0:50
shift + alt - w : yabai -m window --resize top:0:-50
shift + alt - d : yabai -m window --resize right:50:0

# rotate tree
ctrl - s : yabai -m space --rotate 90

ctrl + shift - s : yabai -m window --toggle split

# toggle window fullscreen
ctrl - f : yabai -m window --toggle zoom-fullscreen
